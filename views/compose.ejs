<%- include("./partials/header") -%>

<div class="">

  <h1>Compose</h1>

  <hr>

  <form action="/create" method="post">

    <div class="form-group libraryTitleInput">
      <label for="libraryTitle">Library name</label>
      <input class="form-control" type="text" name="libraryTitle" required></input>
    </div>

    <div class="" id="inputContainer">

    <div class="flashcard-inputs" id="input">

      <div class="form-group">
        <label for="questionInput">Question</label>
        <textarea class="form-control" name="questionInput" rows="1" cols="70" required></textarea>
      </div>

      <div class="form-group">
        <label for="answerInput">Answer</label>
        <textarea class="form-control" name="answerInput" rows="1" cols="70" required></textarea>
      </div>

      <div class="form-group">
        <label for="hintInput">Hint</label>
        <textarea class="form-control" name="hintInput" rows="1" cols="70" required></textarea>
      </div>

    </div>

      </div>

    <div class="row padding">
    <div class="col-8">
      <input type="submit" class="btn btn-secondary btn-lg" name="createButton" value="Create"></input>
    </form>
    </div>
    <div class="col-2">

        <button class="btn btn-secondary btn-lg"  id="addInput">+</button>

    </div>
    <div class="col-2">

        <button class="btn btn-secondary btn-lg" id="removeInput">-</button>

    </div>

  <script type="text/javascript">
    var inputCount = 1;

    $("#addInput").click(function(){

      const div = document.getElementById('input');
      const clone = div.cloneNode(true);
      document.getElementById('inputContainer').appendChild(clone);
      inputCount++;

    });

    $("#removeInput").click(function(){
      if (inputCount > 1) {
      const div = document.getElementById('inputContainer');
      div.removeChild(div.lastChild);
      inputCount--;
    };
    });

  </script>


