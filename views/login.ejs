<%- include("./partials/login-header") -%>

<form action="/login" method="post">

<div class="" id="inputContainer">

<div class="login-input">
  <h1>Login</h1>

  <div class="form-group">
    <label for="userEmail">Email</label>
    <input class="form-control" type="email" name="userEmail"></input>
  </div>

  <div class="form-group">
    <label for="userPassword">Password</label>
    <input class="form-control" type="password" name="userPassword"></input>
  </div>

  <div class="form-group">
    <button class="btn btn-secondary btn-md" type="submit" name="button">Login!</button>
  </div>

  <div class="form-group">
    <p>Don't have an account? Sign up <a href="/register"><u>here</u></a></p>
  </div>

</div>

</div>

</form>

<%- include("./partials/footer") -%>
