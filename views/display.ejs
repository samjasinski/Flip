<%- include("./partials/header") -%>

<h1><%=libraryName%></h1>

<% flashcards.forEach(function(flashcard) {%>


<div class="flashcard">
  <div class="flashcard-inner" id="flashcard-inner">

    <div class="card-face front">
      <%= flashcard.question %>
    </div>

    <div class="card-face back">
      <%= flashcard.answer %>
    </div>

  </div>

</div>

<%})%>


  <!-- <div class="display-input-div">

      <input id="userAnswer" type="text" value=""></input>

  </div> -->

  <div class="display-button-div">

      <button class="btn btn-secondary btn-lg" id="flip-button" type="button" name="flip-button">FLIP!</button>

      <h3 class="check hidden">How'd you go?</h3>

      <button class="btn btn-secondary btn-lg check hidden" id="correct-button" type="button" >got it!</button>
      <button class="btn btn-secondary btn-lg check hidden" id="incorrect-button" type="button" >not this time</button>

  </div>


<script type="text/javascript">

  document.getElementById("flip-button").addEventListener("click", function(err) {

  const flashcards = document.querySelectorAll("[id=flashcard-inner]");
  const check = document.querySelectorAll(".check");

  flashcards.forEach(function(flashcard) {
    flashcard.classList.toggle("flip");
  });

  check.forEach(function(element) {
    element.classList.toggle("hidden");
  });

  this.classList.toggle("hidden");

  });
</script>

